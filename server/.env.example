# PostgreSQL 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cogniflow
DB_USER=cogniflow_user
DB_PASSWORD=cogniflow_password

# 服务器配置
PORT=3001
FRONTEND_URL=http://127.0.0.1:5173
NODE_ENV=development

# JWT 密钥（生产环境请修改为强密码）
JWT_SECRET=cogniflow-secret-key-change-in-production

# 智谱 AI 配置
ZHIPU_API_KEY=your-zhipu-ai-api-key-here
GLM_API_KEY=your_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_SEARCH_ENGINE=search_std

# 文件上传配置
MAX_FILE_SIZE=10485760

# 上传目录配置
# 支持相对路径（相对于项目根目录）和绝对路径
# 开发环境示例: ./uploads
# 生产环境示例（阿里云ECS）: /data/cogniflow/uploads 或 /home/cogniflow/uploads
# 确保该目录具有读写权限
UPLOAD_DIR=./uploads

# 邮件提醒配置
# 发件人 QQ 邮箱地址
EMAIL_USER=646184101@qq.com
# QQ 邮箱授权码（不是登录密码！）
# 获取方法：登录 QQ 邮箱 -> 设置 -> 账户 -> 开启 SMTP 服务 -> 生成授权码
EMAIL_PASSWORD=your-qq-email-authorization-code
